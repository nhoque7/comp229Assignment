<%- include('../partials/header.ejs') %>


 <%- include('../partials/main_nav.ejs') %>

 <!-- Content for the Add page -->
 <div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6"></div>
        <h1><%= title %></h1>

        <form class="form" method ="post">
            <div class="form-group">
                <label for="nameTextField">Book Title</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the Book Title"
                title="title" required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control"
                id="authorTextField"
                placeholder="Enter the Book Author"
                title="author" required>
            </div>

            <div class="form-group">
                <label for="genreTextField">Genre</label>
                <input type="text" class="form-control"
                id="genreTextField"
                placeholder="Enter the Book Genre"
                title="author" required>
            </div>

            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="text" class="form-control"
                id="priceTextField"
                placeholder="Enter the Book Price"
                title="author" required>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>

                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
        </form>
    </div>
 </div>



